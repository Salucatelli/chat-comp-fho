{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (ts-node-dev)",
      "runtimeExecutable": "ts-node-dev",
      "runtimeArgs": [
        "--respawn",
        "--transpile-only",
        "src/server.ts"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
